<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/add_dev_top_layout"
        android:background="@mipmap/bg_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height">
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_white"
            android:background="@color/background_transparent"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="returnBtnClick"
            android:drawableStart="@drawable/ic_return_press"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/text_normal_inc"
            android:textColor="@color/text_white"
            android:id="@+id/device_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/language"
            android:layout_centerInParent="true"/>
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_white"
            android:id="@+id/lan_confirm"
            android:background="@color/background_transparent"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comfirm"
            android:layout_centerVertical="true"
            android:onClick="confirmBtnClick"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RadioGroup
        android:orientation="vertical"
        android:id="@+id/language_radio_group"
        android:background="@color/background_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_marginTop">
        <RadioButton
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_black"
            android:id="@+id/zh_r_rbtn"
            android:background="@color/bg_white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:button="@null"
            android:text="@string/language_zh_r"
            android:drawableEnd="@drawable/bg_picture_qulity"/>
        <RadioButton
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_black"
            android:id="@+id/english_us_rbtn"
            android:background="@color/bg_white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:button="@null"
            android:text="@string/language_english_us"
            android:drawableEnd="@drawable/bg_picture_qulity"/>
    </RadioGroup>
</LinearLayout>
