<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/relativeLayout"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/flSurfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.generalplus.ffmpegLib.ZoomableSurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <ImageButton
        android:id="@+id/btnSwitch"
        android:background="@drawable/switch_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"/>
    <ImageButton
        android:id="@+id/btnLeftMenu"
        android:background="@drawable/navigation_return_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/imgTip"
        android:background="@drawable/shizi"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/camera_video_dot"
        android:background="@drawable/cicle"
        android:visibility="invisible"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:textColor="#ff0000"
        android:layout_gravity="bottom|left"
        android:id="@+id/tvRecordTime"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="00:00:00"/>
    <ImageView
        android:id="@+id/ivBroken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/broken"
        android:layout_centerInParent="true"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/tvSpeed"
        android:background="#ffffff"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <RelativeLayout
        android:id="@+id/rlRightMenu"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:orientation="vertical"
            android:background="#d7dfe8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/language15"/>
            <TextView
                android:background="#ffffaa"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/textMenu12"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/language12"/>
            <TextView
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <TextView
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/textMenu13"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/language13"/>
            <TextView
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <TextView
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <TextView
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/textMenu14"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/language14"/>
            <TextView
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <TextView
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <TextView
                android:background="#ffffaa"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:background="#ffffaa"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
