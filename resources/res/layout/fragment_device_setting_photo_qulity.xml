<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/add_dev_top_layout"
        android:background="@mipmap/bg_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height">
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_white"
            android:id="@+id/device_setting_return_btn"
            android:background="@color/background_transparent"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="returnBtnClick"
            android:drawableStart="@drawable/ic_return_press"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/text_normal_inc"
            android:textColor="@color/text_white"
            android:id="@+id/device_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/photo_quality"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/text_small"
        android:textColor="@color/text_black"
        android:id="@+id/photo_qulity_value"
        android:background="@color/background_transparent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photo_qulity_value"/>
    <TextView
        android:textSize="@dimen/text_smaller_x"
        android:textColor="@color/text_gray"
        android:id="@+id/recording_time"
        android:background="@color/background_transparent"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recorded_time"/>
    <RadioGroup
        android:orientation="vertical"
        android:id="@+id/photo_qulity_radio_group"
        android:background="@color/background_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_black"
            android:id="@+id/lo_rbtn"
            android:background="@color/bg_white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:button="@null"
            android:text="@string/photo_qulity_lo"
            android:drawableEnd="@drawable/bg_picture_qulity"/>
        <RadioButton
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_black"
            android:id="@+id/md_rbtn"
            android:background="@color/bg_white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:button="@null"
            android:text="@string/photo_qulity_md"
            android:drawableEnd="@drawable/bg_picture_qulity"/>
        <RadioButton
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_black"
            android:id="@+id/hd_rbtn"
            android:background="@color/bg_white"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:button="@null"
            android:text="@string/photo_qulity_hi"
            android:drawableEnd="@drawable/bg_picture_qulity"/>
    </RadioGroup>
</LinearLayout>
