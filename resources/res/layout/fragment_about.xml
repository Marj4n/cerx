<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/dev_photo_normal_layout"
        android:background="@mipmap/bg_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height">
        <ImageView
            android:id="@+id/about_return"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_return_press"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:layout_marginStart="5dp"/>
        <TextView
            android:textSize="@dimen/text_normal"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:id="@+id/dev_photo_title"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="@string/about_app"
            android:layout_toRightOf="@+id/about_return"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/about_app_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_logo"
            android:contentDescription="@null"/>
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_black"
            android:gravity="start|center_vertical"
            android:id="@+id/about_app_version"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_app_logo"/>
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_black"
            android:id="@+id/about_sdk_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_app_version"/>
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_black"
            android:id="@+id/about_fw_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about_sdk_version"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ListView
            android:id="@+id/about_list_view"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
