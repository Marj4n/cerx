<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/text_normal"
        android:textColor="@color/text_black"
        android:gravity="center"
        android:id="@+id/create_dir_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/input_new_dir_name"/>
    <EditText
        android:id="@+id/dialog_edit_text"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_below="@+id/create_dir_title_tv"
        android:layout_centerInParent="true"
        android:inputType="textCapSentences"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dialog_btn_layout"
        android:background="@color/text_gray"
        android:paddingTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/dialog_input_cancel_btn"
            android:background="@drawable/dialog_bt_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/dialog_cancel"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/dialog_input_confirm_btn"
            android:background="@drawable/dialog_bt_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/dialog_confirm"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
