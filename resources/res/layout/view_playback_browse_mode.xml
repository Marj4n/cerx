<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/text_normal"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/position_of_time"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/text_small"
        android:textColor="@color/text_white"
        android:id="@+id/auto_play_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_play"
        android:layout_below="@+id/position_of_time"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="@dimen/text_small"
        android:textColor="@color/text_white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/null_data"
        android:layout_below="@+id/auto_play_tip"/>
    <com.jieli.stream.dv.running2.ui.widget.coverflow.RecyclerCoverFlow
        android:id="@+id/carousel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/auto_play_tip"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/browse_mode_left_bar"
        android:background="@color/half_transparent"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:gravity="center"
            android:id="@+id/left_bar_lock_btn"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/drawable_lock"
            android:layout_weight="1"
            android:contentDescription="@null"/>
        <ImageView
            android:gravity="center"
            android:id="@+id/left_bar_delete_file_btn"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/drawable_delete_btn"
            android:layout_weight="1"
            android:contentDescription="@null"/>
    </LinearLayout>
</RelativeLayout>
