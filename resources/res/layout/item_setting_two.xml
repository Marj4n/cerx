<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_bg_view"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/text_small"
        android:textColor="@color/text_black"
        android:id="@+id/item_setting_two_tv1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/item_setting_two_tv2"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="@dimen/text_smaller_x"
        android:id="@+id/item_setting_two_tv2"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_setting_two_icon"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/item_setting_two_icon"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_right_arrow"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/company"/>
</RelativeLayout>
