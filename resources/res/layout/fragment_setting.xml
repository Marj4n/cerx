<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/setting_top_layout"
            android:background="@mipmap/bg_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height">
            <TextView
                android:textSize="@dimen/text_normal_inc"
                android:textColor="@color/text_white"
                android:id="@+id/setting_top_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/tab_me"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/setting_list_view"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/text_transparent"
            android:layout_below="@+id/setting_top_layout"/>
    </RelativeLayout>
</FrameLayout>
