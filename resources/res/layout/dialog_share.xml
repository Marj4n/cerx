<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/dialog_share_0"
    android:background="@color/WHITE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <TextView
        android:textSize="24sp"
        android:textColor="#ff000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/share"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/tv_whatsapp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/icon_share_whatsapp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/tv_qq"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/icon_share_qq"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/tv_fecebook"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/icon_share_facebook"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/tv_twitter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/icon_share_twitter"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/tv_youtube"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/icon_share_youtube"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:textSize="17sp"
        android:textColor="#ff000000"
        android:gravity="center"
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/cancel"/>
</LinearLayout>
