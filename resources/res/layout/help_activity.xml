<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/help_activity_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#09b0f3"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:id="@+id/back"
            android:paddingLeft="21dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/helcenter"
            android:drawableLeft="@mipmap/back"
            android:drawablePadding="9dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_layout1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_help1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_help_bg"/>
        <TextView
            android:textSize="15sp"
            android:textColor="#ff333333"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:text="@string/text1"/>
        <ImageView
            android:id="@+id/iv_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.5dp"
            android:src="@mipmap/icon_help_r"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_layout2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_help_l"/>
        <ImageView
            android:id="@+id/iv_help2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51dp"
            android:src="@mipmap/icon_help_bg2"/>
    </LinearLayout>
</LinearLayout>
